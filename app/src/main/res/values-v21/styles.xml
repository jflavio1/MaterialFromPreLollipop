<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">0dp</item>

        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">10dp</item>

        <!-- Elevation for post-lollipop including shadow -->
        <item name="cardElevation">2dp</item>

        <!-- Padding for the card view content -->
        <item name="contentPadding">10dp</item>

        <!--
        This allows to add the padding that is added by default to the CardView in pre-lollipop
        devices.
        The padding value is defined by the cardElevation value. That means, if you want to have
        a 5 dp margin between CardViews, the cardElevation should be set to 2.
        -->
        <item name="cardUseCompatPadding">true</item>

    </style>

</resources>
